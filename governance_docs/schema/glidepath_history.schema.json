{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fccps-ai-committee.local/schema/glidepath_history.schema.json",
  "title": "Glidepath History",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "meta",
    "corridor",
    "weights",
    "points"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "schema_version",
        "description"
      ],
      "properties": {
        "schema_version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "generated_at": {
          "type": "string"
        }
      }
    },
    "corridor": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "gates"
      ],
      "properties": {
        "gates": {
          "type": "array",
          "minItems": 8,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "gate_id",
              "date",
              "what_min",
              "what_max",
              "how_min",
              "how_max",
              "board_ready_deadline",
              "label"
            ],
            "properties": {
              "gate_id": {
                "type": "string",
                "pattern": "^m[1-8]$"
              },
              "date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
              },
              "what_min": {
                "type": "number",
                "minimum": 0,
                "maximum": 10
              },
              "what_max": {
                "type": "number",
                "minimum": 0,
                "maximum": 10
              },
              "how_min": {
                "type": "number",
                "minimum": 0,
                "maximum": 10
              },
              "how_max": {
                "type": "number",
                "minimum": 0,
                "maximum": 10
              },
              "board_ready_deadline": {
                "type": "boolean"
              },
              "label": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "hard_stop": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "weights": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "what",
        "how"
      ],
      "properties": {
        "what": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "how": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        }
      }
    },
    "current_eval": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "current_point_id",
        "current_gate_id",
        "what_in_range",
        "how_in_range",
        "what_delta",
        "how_delta",
        "status"
      ],
      "properties": {
        "current_point_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "current_gate_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "what_in_range": {
          "type": "boolean"
        },
        "how_in_range": {
          "type": "boolean"
        },
        "what_delta": {
          "type": "number"
        },
        "how_delta": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "in_range",
            "one_axis_out",
            "out_of_range"
          ]
        }
      }
    },
    "points": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "generated_at",
          "version_key",
          "what_score",
          "how_score",
          "coverage_what",
          "coverage_how",
          "included_kpis"
        ],
        "properties": {
          "generated_at": {
            "type": "string"
          },
          "version_key": {
            "type": "string"
          },
          "version_key_short": {
            "type": "string"
          },
          "point_id": {
            "type": "string"
          },
          "next_gate_id": {
            "type": [
              "string",
              "null"
            ]
          },
          "next_gate_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "what_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 10
          },
          "how_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 10
          },
          "coverage_what": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "coverage_how": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "included_kpis": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "what",
              "how"
            ],
            "properties": {
              "what": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "how": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
